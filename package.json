    "bugs": {
        "url": "https://github.com/creuzerm/PDF-Signature-Imposer/issues"
    },
    "homepage": "https://github.com/creuzerm/PDF-Signature-Imposer#readme",
    "dependencies": {
        "pdf-lib": "^1.17.1"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.23",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "tailwindcss": "^3.4.19",
        "vite": "^7.2.7",
        "vitest": "^4.0.15"
    }
}
